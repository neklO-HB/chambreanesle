<%- include('partials/header', { title }) %>
<section class="container section split">
  <div>
    <p class="eyebrow">Réservation</p>
    <h1>Merci, votre demande est enregistrée</h1>
    <p class="lead">Nous reviendrons vers vous très vite pour confirmer les détails.</p>
    <a href="/espace-membre" class="button">Consulter l'espace membre</a>
  </div>
  <div class="panel">
    <h3>Récapitulatif</h3>
    <p class="muted">Chambre</p>
    <p><strong><%= booking.room.name %></strong></p>
    <p class="muted">Dates</p>
    <p><%= formatDate(booking.startDate) %> au <%= formatDate(booking.endDate) %></p>
    <p class="muted">Voyageurs</p>
    <p><%= booking.guests %> personne(s)</p>
    <% if (booking.extras.length) { %>
    <p class="muted">Options</p>
    <ul class="tags">
      <% booking.extras.forEach((extra) => { %>
      <li><%= extra %></li>
      <% }) %>
    </ul>
    <% } %>
    <a href="/reservation?roomSlug=<%= booking.room.slug %>" class="button ghost">Modifier</a>
  </div>
</section>
<%- include('partials/footer') %>
